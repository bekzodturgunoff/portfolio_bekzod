---
const { id, title, children } = Astro.props;
---
<section id={id} class="max-w-6xl mx-auto px-4 py-12 sm:py-16 lg:py-20 xl:py-24" data-reveal>
  {title && (
    <h2 class="text-2xl sm:text-3xl md:text-4xl font-semibold tracking-tight break-words mb-5 sm:mb-7 lg:mb-8 text-neutral-900 dark:text-neutral-100">{title}</h2>
  )}
  <div>
    <slot />
  </div>
</section>
