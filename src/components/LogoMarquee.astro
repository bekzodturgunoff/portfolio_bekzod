---
const logos = ['figma','github','notion','framer','vercel','astro','tailwind','figma','github','notion'];
---
<section class="border-y border-black/10 dark:border-white/10">
  <div class="max-w-6xl mx-auto px-4 overflow-hidden py-10">
    <div class="marquee">
      <div class="marquee__content" aria-hidden="false">
        {logos.map((l) => (
          <span class="chip">{l}</span>
        ))}
      </div>
      <div class="marquee__content" aria-hidden="true">
        {logos.map((l) => (
          <span class="chip">{l}</span>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  .marquee { display:flex; gap: var(--gap, 3rem); }
  .marquee__content { display:flex; gap: var(--gap, 3rem); min-width:max-content; flex-shrink:0; animation: scroll 30s linear infinite; }
  .marquee__content:nth-child(2) { animation-delay: -15s; }
  @keyframes scroll { from { transform: translateX(0); } to { transform: translateX(-100%); } }

  .chip { display:inline-flex; align-items:center; padding:.5rem 1rem; border-radius:9999px; background: rgba(0,0,0,.04); color:inherit; text-transform:capitalize; letter-spacing:.02em; font-size:.875rem; border:1px solid rgba(0,0,0,.08); }
  :global(.dark) .chip { background: rgba(255,255,255,.08); border-color: rgba(255,255,255,.12); }
</style>
