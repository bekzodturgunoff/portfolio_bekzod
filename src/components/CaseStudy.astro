---
import { getDictionary } from '../i18n';

interface Props {
  lang?: string;
}

const { lang } = Astro.props;
const data = getDictionary(lang).caseStudy;
---
<section class="hidden md:block max-w-6xl mx-auto px-4 py-14 sm:py-20 lg:py-24">
  <div class="rounded-3xl border border-black/10 dark:border-white/10 bg-white/80 dark:bg-white/5 backdrop-blur-sm p-6 sm:p-9 lg:p-11">
    <div class="flex flex-col gap-6" data-reveal>
      <span class="self-start px-3 py-1 rounded-full text-[11px] tracking-[0.18em] uppercase bg-black/5 dark:bg-white/10 text-neutral-600 dark:text-neutral-300 border border-black/10 dark:border-white/10">{data.badge}</span>
      <div class="max-w-3xl">
        <h2 class="text-4xl md:text-5xl font-semibold tracking-tight text-neutral-900 dark:text-white">{data.title}</h2>
        <p class="mt-4 text-neutral-600 dark:text-neutral-300 leading-relaxed">{data.subtitle}</p>
      </div>
      <a href={data.cta.href} target="_blank" rel="noreferrer" class="inline-flex items-center gap-2 self-start btn btn-primary btn-md">
        {data.cta.label}
        <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" d="M5 12h14m0 0-5-5m5 5-5 5" />
        </svg>
      </a>
    </div>

  <div class="mt-8 sm:mt-11 lg:mt-12 grid gap-4 lg:gap-5 sm:grid-cols-2 lg:grid-cols-4" data-reveal>
      {data.meta.map((item) => (
        <div class="rounded-2xl border border-black/10 dark:border-white/10 bg-white dark:bg-white/5 px-4 py-4 sm:py-5">
          <div class="text-[11px] uppercase tracking-[0.18em] text-neutral-500 dark:text-neutral-400">{item.label}</div>
          <div class="mt-2 text-sm font-medium text-neutral-900 dark:text-neutral-100">{item.value}</div>
        </div>
      ))}
    </div>

    <div class="mt-10 sm:mt-12 lg:mt-12 grid gap-8 lg:gap-9 xl:gap-10 lg:grid-cols-[1.1fr_0.9fr]">
      <div class="space-y-6 sm:space-y-8 lg:space-y-9" data-reveal>
        <article class="rounded-2xl border border-black/10 dark:border-white/10 bg-white dark:bg-white/5 p-5 sm:p-6 lg:p-7">
          <h3 class="text-lg font-semibold text-neutral-900 dark:text-neutral-100">{data.problem.title}</h3>
          <p class="mt-3 text-neutral-700 dark:text-neutral-300 leading-relaxed">{data.problem.body}</p>
        </article>

  <article class="rounded-2xl border border-black/10 dark:border-white/10 bg-white dark:bg-white/5 p-5 sm:p-6 lg:p-7">
          <h3 class="text-lg font-semibold text-neutral-900 dark:text-neutral-100">{data.research.title}</h3>
          <ul class="mt-3 space-y-2 text-neutral-700 dark:text-neutral-300 leading-relaxed list-disc list-inside">
            {data.research.bullets.map((bullet) => (
              <li>{bullet}</li>
            ))}
          </ul>
        </article>

  <article class="rounded-2xl border border-black/10 dark:border-white/10 bg-white dark:bg-white/5 p-5 sm:p-6 lg:p-7">
          <h3 class="text-lg font-semibold text-neutral-900 dark:text-neutral-100">{data.design.title}</h3>
          <ul class="mt-3 space-y-2 text-neutral-700 dark:text-neutral-300 leading-relaxed list-disc list-inside">
            {data.design.bullets.map((bullet) => (
              <li>{bullet}</li>
            ))}
          </ul>
        </article>
      </div>

  <aside class="space-y-5 sm:space-y-6 lg:space-y-7" data-reveal>
        {data.images.map((image) => (
          <figure class={`overflow-hidden rounded-2xl border ${image.placeholder ? 'border-dashed border-black/20 dark:border-white/20 bg-white/40 dark:bg-white/10' : 'border-black/10 dark:border-white/10 bg-white dark:bg-white/5'}`}>
            {image.placeholder ? (
              <div class="flex h-48 items-center justify-center px-6 text-center text-sm text-neutral-500 dark:text-neutral-400">
                {image.caption}
              </div>
            ) : (
              <>
                <img src={image.src} alt={image.alt} loading="lazy" class="w-full object-cover" />
                <figcaption class="px-5 py-4 text-sm text-neutral-600 dark:text-neutral-300 border-t border-black/5 dark:border-white/5">{image.caption}</figcaption>
              </>
            )}
          </figure>
        ))}
      </aside>
    </div>
  </div>
</section>
