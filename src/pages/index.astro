---
import Base from "../layouts/Base.astro";
import Nav from "../components/Nav.astro";
import Hero from "../components/Hero.astro";
import Section from "../components/Section.astro";
import LogoMarquee from "../components/LogoMarquee.astro";
import Projects from "../components/Projects.astro";
import ContactForm from "../components/ContactForm.astro";
import Footer from "../components/Footer.astro";
import { getDictionary } from '../i18n';

const t = getDictionary('en');
const [headingLeft, ...headingRightWords] = t.contact.heading.split(' ');
const headingRight = headingRightWords.join(' ');
---
<Base 
  title="Bekzod Turgunov — Front-end Developer & Brand-minded Designer" 
  description="I build fast, meaningful websites that help businesses talk to their customers. Based in Seoul, originally from Uzbekistan. Open for new projects."
>
  <Nav />
  <main id="main">
  <Hero />
  <LogoMarquee />

  <Section id="about" title={t.nav.links.about}>
    <p class="max-w-prose text-neutral-700 dark:text-neutral-300">{t.about.intro}</p>
    <div class="mt-6 text-[13px] text-neutral-500 dark:text-neutral-400">
      <span>{t.about.basedIn} · </span>
      <a class="underline underline-offset-4 decoration-neutral-400/60 dark:decoration-white/40 hover:text-neutral-800 dark:hover:text-neutral-100" href="mailto:bekzodturgunoff@gmail.com">bekzodturgunoff@gmail.com</a>
    </div>
    <p class="mt-3 text-[13px] text-neutral-500 dark:text-neutral-400">{t.about.languagesLine}</p>
  </Section>

  <Section id="skills" title={t.skills.title}>
    <div class="flex flex-wrap gap-3" data-reveal>
      {t.skills.items.map((s) => (
        <span class="px-2.5 py-1 rounded-full text-xs tracking-wide uppercase bg-black/5 dark:bg-white/10 border border-black/10 dark:border-white/10">{s}</span>
      ))}
    </div>
  </Section>

  <Section id="work" title={t.projects.selectedWork}>
    <Projects />
  </Section>



  <Section id="contact" title="">
      <h2 class="leading-[0.95] text-5xl md:text-7xl lg:text-8xl font-extrabold tracking-tight mb-10" data-reveal>
  <span class="text-neutral-300 dark:text-white/90">{headingLeft}</span>
  <span class="ml-3 text-neutral-900 dark:text-white">{headingRight}</span>
      </h2>
      <p class="max-w-2xl text-neutral-700 dark:text-neutral-300 mb-10" data-reveal>{t.contact.intro}</p>

      <div class="grid sm:grid-cols-3 gap-3 mb-12" data-reveal>
        <a href="tel:+8201079328573" class="btn btn-outline btn-lg text-center">{t.contact.ctas.call}</a>
        <a href="mailto:bekzodturgunoff@gmail.com" class="btn btn-outline btn-lg text-center">{t.contact.ctas.email}</a>
        <a href="https://t.me/bekzodturgunoff" target="_blank" rel="noreferrer" class="btn btn-outline btn-lg text-center">{t.contact.ctas.telegram}</a>
      </div>

      <ContactForm />
  </Section>
  </main>

  <Footer />

  <script src="/scripts/reveal.js" defer></script>
</Base>
